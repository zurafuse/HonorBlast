<!DOCTYPE html>
<html>
<head>
	<title>ADMIN PAGE - Honor Blast</title>
	<%- include sharedcontent/head.ejs %>
</head>
<body>
<%- include sharedcontent/header.ejs %>
	<section class="main-container">
		<br>
		<div class="container-fluid">
		<h2 class="title2 ">SELECT A STUDENT TO MANAGE OR CREATE A NEW ONE</h2>
			<div class="row players0">
			<% for (var i = 0; i < INFO.players.length; i++){ %>
				<a href="admin/player/<%- INFO.players[i].id %>">
				<div class="col-sm-3 avatar-col ">
					<div class="avatar-name" id="user<%-INFO.players[i].id%>">
						<h3 class="player-img avatar-name"><%- INFO.players[i].name %></h3>
						<svg class="img-responsive player-img " viewBox="0 0 400 400" xmlns:svg="http://www.w3.org/2000/svg" xmlns="http://www.w3.org/2000/svg" version="1.0" alt="Avatar"><%- INFO.players[i].img %></svg>
						<h5 class="player-img "><%- INFO.players[i].username %></h5>
					</div><br>
				</div>
				</a>
			<% } %>
				<a href="admin/player/newplayer">
				<div class="col-sm-3 avatar-col ">
					<div class="avatar-name" id="newuser">
						<h3 class="player-img avatar-name">ADD A NEW PLAYER</h3>
						<img class="img-responsive player-img " src="/images/newplayer.png" alt="Avatar" />
					</div><br>
				</div>	
				</a>				
			</div>
		</div>
	</section>	
	<%- include sharedcontent/footer.ejs %>
	
	<script src="/js/app.js"></script>
	<script src="/js/menu.js"></script>
</body>
</html>