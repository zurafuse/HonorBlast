<!DOCTYPE html>
<html>
<head>
    <title>QUESTS - Honor Blast</title>
    <%- include sharedcontent/head.ejs %>
</head>
<body>
    <%- include sharedcontent/header.ejs %>
    <section class="main-container">
        <br>
        <div class="container-fluid">
            <div id="control-content">
                <div class="row"><h2 class="title2">CREATE NEW PRIZE</h2></div>
                <div class="row"><p class="stat-text">PRIZE NAME: </p><input type="text" value="PRIZE NAME HERE" id="prizefield" name="prizefield" onchange="updatePrizeName()" /></div>
                <div class="row"><p class="stat-text">DESCRIPTION: </p><input type="text" value="PRIZE DESCRIPTION HERE" id="prizedesfield" name="prizedesfield" onchange="updatePrizeDes()" /></div>
                <div class="row"><p class="stat-text">COST: </p><input type="text" value="0" id="costfield" name="costfield" onchange="updateCost()" /></div>

            </div>
            <div class="row">
                <div class="container-fluid">
                    <h2 class="title2 ">Enter Username and Password to Create new Prize</h2>
                    <form action="/admin/prizes/add" method="post">
                        <div class="container">
                            <label for="uname"><b>Username</b></label>
                            <input type="text" placeholder="Enter Username" name="uname" id="uname" required onchange="updateFields()">
                            <label for="psw"><b>Password</b></label>
                            <input type="password" placeholder="Enter Password" name="psw" id="psw" required onchange="updateFields()">
                            <input type="hidden" id="submitprizename" name="submitprizename" value="">
                            <input type="hidden" id="submitprizedescription" name="submitprizedescription" value="">
                            <input type="hidden" id="submitcost" name="submitcost" value="">
                            <input type="hidden" id="submitdelete" name="submitdelete" value="false">
                            <input type="hidden" id="submittype" name="submittype" value="prize">
                            <button type="submit" class="login-button">CREATE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <%- include sharedcontent/footer.ejs %>

    <script src="/js/newprizes.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/menu.js"></script>
</body>
</html>