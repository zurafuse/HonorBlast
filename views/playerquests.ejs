<!DOCTYPE html>
<html>
<head>
	<title>QUESTS - Honor Blast</title>
	<%- include sharedcontent/head.ejs %>
</head>
<body>
<%- include sharedcontent/header.ejs %>
<% var thisStudent = {};
	for (var i = 0; i < INFO.players.length; i++){
		if (INFO.players[i].id == ID){
			thisStudent = INFO.players[i];
		}
	}
 %>
	<section class="main-container">
		<br>
        <div class="container-fluid">
            <div class="row"><h2 class="title2"><%- thisStudent.name %>'s Quests:</h2></div>
            <% for (var i = 0; i < INFO.quests.length; i++){
            if (INFO.quests[i].complete == 0){
            if (thisStudent.id == INFO.quests[i].studentid){ %>
            <div class="row stat-row"><p class="stat-text"><%- INFO.quests[i].name %>: <%- INFO.quests[i].description %>. Prizes include: <%- INFO.quests[i].prizes %>.</p></div>
            <% } }} %>
        </div>
	</section>	
	<%- include sharedcontent/footer.ejs %>
	
	<script src="/js/app.js"></script>
	<script src="/js/menu.js"></script>
</body>
</html>