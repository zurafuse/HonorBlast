<!DOCTYPE html>
<html>
<head>
	<title>QUESTS - Honor Blast</title>
	<%- include sharedcontent/head.ejs %>
</head>
<body>
<%- include sharedcontent/header.ejs %>
<% var thisStudent = {};
	for (var i = 0; i < INFO.players.length; i++){
		if (INFO.players[i].id == ID){
			thisStudent = INFO.players[i];
		}
	}
	var studentStatus = "strong";
	var studenh = Math.floor(thisStudent.health / 10);
	if (studenh == 0 || studenh == 1 || studenh == 2 || studenh == 3){
		studentStatus = "fallen";
	}
	else if (studenh == 4 || studenh == 5){
		studentStatus = "weak";
	}
	else if (studenh == 6 || studenh == 7){
		studentStatus = "medium";
	}
	else if (studenh == 8){
		studentStatus = "strong";
	}
	else if (studenh == 9 || studenh == 10){
		studentStatus = "powerful";
	} 
	%>
	<section class="main-container">
		<br>
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-4">
					<%- thisStudent.img %>
				</div>
				<div class="col-sm-8">
					<div class="row stat-row">
						<p class="stat-text">👤 <%- thisStudent.name %> (<%- thisStudent.username %>)</p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">🎖 Rank: <%- thisStudent.title %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">📊 Level: <%- Math.floor(thisStudent.xp / 1000) %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">䷩ Experience Points: <%- thisStudent.xp %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text"><span style="font-size: 26pt">¤</span> Coins: <%- thisStudent.money %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text"><span style="color: red; font-size: 26pt">♥</span> HP Points: <%- thisStudent.health %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">⭐ Stars: <%- thisStudent.stars %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">♥ Status: <%- studentStatus %></p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">

					<div class="row stat-row">
						<a href="/player/<%- thisStudent.id %>/quests"><button class="user-quests stat-button">📜 Quests</button></a>
					</div>
					<div class="row stat-row">
						<a href="/player/<%- thisStudent.id %>/prizes"><button class="user-prizes stat-button">🏅 Prizes</button></a>
					</div>
					<div class="row stat-row">
						<a href="/player/<%- thisStudent.id %>/trophies"><button class="user-trophies stat-button">🏆 Trophies</button></a>
					</div>					
					
				</div>
				<div class="col-sm-8">

				</div>
			</div>
		</div>
		</div>

		
	</section>	
	<%- include sharedcontent/footer.ejs %>
	
	<script src="/js/app.js"></script>
	<script src="/js/menu.js"></script>
</body>
</html>