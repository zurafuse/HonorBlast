<!DOCTYPE html>
<html>
<head>
	<title>QUESTS - Honor Blast</title>
	<%- include sharedcontent/head.ejs %>
</head>
<body>
<%- include sharedcontent/header.ejs %>
<% var thisStudent = {};
	for (var i = 0; i < INFO.players.length; i++){
		if (INFO.players[i].id == ID){
			thisStudent = INFO.players[i];
		}
	}
 %>
	<section class="main-container">
		<br>
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-4">
					<svg class="img-responsive " viewBox="0 0 400 400" width="70%" height="70%" xmlns:svg="http://www.w3.org/2000/svg" xmlns="http://www.w3.org/2000/svg" version="1.0" alt="Avatar"><%- thisStudent.img %></svg>
				</div>
				<div class="col-sm-8">
					<div class="row stat-row">
						<p class="stat-text">👤 <%- thisStudent.name %> (<%- thisStudent.username %>)</p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">🎖 Rank: <%- thisStudent.title %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">📊 Level: 0</p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">䷩ Experience Points: <%- thisStudent.xp %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text"><span style="font-size: 26pt">¤</span> Coins: <%- thisStudent.money %></p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">
					<div class="row stat-row">
						<p class="stat-text"><span style="color: red; font-size: 26pt">♥</span> Health: 100</p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">⭐ Stars: <%- thisStudent.stars %></p>
					</div>
					<div class="row stat-row">
						<p class="stat-text">♥ Status: strong</p>
					</div>
				</div>
				<div class="col-sm-8">
					<div class="row stat-row">
						<button class="user-quests stat-button">📜 Quests</button>
					</div>
					<div class="row stat-row">
						<button class="user-prizes stat-button">🏅 Prizes</button>
					</div>
					<div class="row stat-row">
						<button class="user-trophies stat-button">🏆 Trophies</button>
					</div>
				</div>
			</div>
		</div>
		</div>

		
	</section>	
	<%- include sharedcontent/footer.ejs %>
	
	<script src="/js/app.js"></script>
	<script src="/js/menu.js"></script>
</body>
</html>